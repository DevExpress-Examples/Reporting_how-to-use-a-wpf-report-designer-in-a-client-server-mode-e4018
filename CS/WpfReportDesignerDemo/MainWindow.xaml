<Window x:Class="WpfReportDesignerDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxrd="http://schemas.devexpress.com/winfx/2008/xaml/reportdesigner"
    Title="WPF Report Designer">
    <Grid>
        <dxrd:ReportDesigner x:Name="reportDesigner" 
                             AutoStartDesign="True" 
                             ServiceUri="http://localhost:50786/ReportService1.svc" 
                             ReportName="ReportService.Report, Reporting"/>
    </Grid>
</Window>
